<% if is_mobile_device? %>
	$(".ui-page-active").find("#vote-up").addClass("ui-btn-active");
	$(".ui-page-active").find("#vote-down").removeClass("ui-btn-active");
	$(".ui-page-active").find("#vote-total").html("<%= @vote_total %>")
<% else %>
	<% if current_user %>
		$("#<%= @up_arrow_id %>").unbind('mouseenter mouseleave');
		$("#<%= @up_arrow_id %>").attr("src", "/assets/arrow_up.png");
		$("#<%= @down_arrow_id %>").attr("src", "/assets/arrow_down_faded.png");
		$("#<%= @vote_total_id %>").html("<%= @vote_total %>");
	<% else %>
		showSignInQtip();
	<% end %>
<% end %>
